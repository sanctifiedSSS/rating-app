<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">

    <title>
        {% block title %}
            Yet another rating site
        {% endblock %}
    </title>

    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    {% endblock %}

    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    {% endblock %}
</head>

<body>
{% block body %}

    <div class="header">
        {% block header %}
            <div class="container">
                <div class="row">

                    <div class="col">
                        <a href="{{ path('home') }}"><img src="https://cdn.7tv.app/emote/603caea243b9e100141caf4f/2x.avif" alt=" " align="right"></a>
                    </div>

                    <div class="col">
                        <table class="table">
                            <thead>
                            <tr>
                                <th><a href="{{ path('category', {'category': 'Film'}) }}">Films</a></th>
                                <th><a href="{{ path('category', {'category': 'Game'}) }}">Games</a></th>
                                <th><a href="{{ path('category', {'category': 'TV series'}) }}">TV series</a></th>
                                <th><a href="{{ path('category', {'category': 'Anime'}) }}">Anime</a></th>
                            </tr>
                            </thead>
                        </table>
                    </div>

                    <div class="col">
                        <button onclick="location.href='{{ path('app_login') }}'" type="button">Log in</button>
                        <button onclick="location.href='{{ path('app_signup') }}'" type="button">Sign up</button>
                    </div>

                </div>
            </div>
        {% endblock %}
    </div>

{% endblock %}
</body>
</html>
